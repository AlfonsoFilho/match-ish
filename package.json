{
  "name": "like-a-glove",
  "version": "0.0.0",
  "description": "",
  "main": "like-a-glove.js",
  "scripts": {
    "build": "npm run makeparser && rollup -c",
    "lint": "tslint -e '**/*.gen.ts' --fix --format stylish --project .",
    "test": "npm run makeparser && npm run lint && jest --coverage",
    "test:watch": "jest --watchAll",
    "makeparser": "pegjs --format commonjs -O speed -o src/lang.gen.js src/lang.pegjs",
    "start": "ts-node tokenizer.ts"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "21.1.5",
    "@types/node": "8.0.47",
    "jest": "21.2.1",
    "jest-cli": "21.2.1",
    "pegjs": "0.10.0",
    "rollup": "0.53.0",
    "rollup-plugin-commonjs": "8.2.6",
    "rollup-plugin-filesize": "1.5.0",
    "rollup-plugin-node-resolve": "3.0.0",
    "rollup-plugin-typescript": "0.8.1",
    "rollup-plugin-uglify": "1.0.2",
    "tslint": "5.8.0",
    "tslint-eslint-rules": "4.1.1",
    "typescript": "2.5.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/preprocessor.js"
    },
    "testMatch": [
      "**/*.spec.(ts|tsx|js)"
    ],
    "collectCoverageFrom": [
      "**/*.ts",
      "!**/*.gen.ts",
      "!src/index.ts",
      "!src/types.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  }
}
