{
  "compilerOptions": {

    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es2015"
    ],
    "pretty": true,
    
    "importHelpers": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,

    "downlevelIteration": true,
    "isolatedModules": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  }
}